<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.yedamtour.reservation.map.ReservationMapper">
<select id="reservationSelectList" resultType="co.yedam.yedamtour.reservation.service.ReservationVO">
	SELECT * FROM TOUR_RESERVATION
</select>
<insert id="reservationInsert" parameterType="co.yedam.yedamtour.reservation.service.ReservationVO">
<selectKey keyProperty="reservationId" resultType="int" order="BEFORE">
			SELECT NVL(MAX(reservation_Id), 0) + 1 AS ID
			  FROM tour_reservation
		</selectKey>
insert into tour_reservation(reservation_Id, ticket_id, RESERVATION_PERSONNEL, RESERVATION_WRITER_ID, RESERVATION_PRICE,CATEGORY_ID)
values(#{reservationId}, #{ticketId},#{reservationPersonnel},#{reservationWriteId},#{reservationPrice},#{categoryId})

</insert>

<update id="reservationUpdate" parameterType="co.yedam.yedamtour.reservation.service.ReservationVO">

</update>

<delete id="reservationDelete" parameterType="co.yedam.yedamtour.reservation.service.ReservationVO">

</delete>
</mapper>